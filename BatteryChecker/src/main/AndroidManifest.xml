<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobilemerit.batterychecker"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mobilemerit.batterychecker.BatteryCheck"
            android:label="@string/title_activity_battery_check"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mobilemerit.batterychecker.BatteryMonitorActivity"/>
         <activity android:name="com.mobilemerit.batterychecker.DialogActivity"
             android:theme="@style/Theme.D1NoTitleDim"/>
        
        <service android:name="com.mobilemerit.batterychecker.BatteryMonitorService" android:exported="true"/>
        <service android:name="com.mobilemerit.java.StartBatteryTestService"/>
                    
         
       
    </application>

</manifest>