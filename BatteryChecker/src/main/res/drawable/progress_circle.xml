<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="@color/battery_background_color"
                android:centerColor="@color/battery_background_color"
                android:centerY="1.0"
                android:endColor="@color/battery_background_color"
                android:angle="270"
        />
        <stroke android:color="@color/battery_boder_color"
            android:width="2dp"/>
        <corners android:radius="10dp"/>
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="@color/battery_foreground_color"
                android:centerColor="@color/battery_foreground_color"
                android:centerY="1.0"
                android:endColor="@color/battery_foreground_color"
                android:angle="270"
            />
            <stroke android:color="@color/battery_boder_color"
            android:width="2dp"/>
            <corners  android:radius="10dp"/>
        </shape>
    </clip>
</item>
</layer-list>